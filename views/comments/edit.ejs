<% include ../partials/header %>

<div class="container">
        
    <h2 style ="text-align: center;">Edit comment</h2>    
    <div class="row">

        <div style="width: 60%; margin: 10px auto;">
            <form action="/destinations/<%=destination_id%>/comments/<%=comment._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" value="<%=comment.text%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-success btn-block">Submit!</button>
                </div>
            </form>
            <a href="/destinations">Go Back</a>
        </div>
        
        
    </div>
    
</div>

