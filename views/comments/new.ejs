<% include ../partials/header %>

<div class="container">
    <h2 style ="text-align: center;">Add new comment to <%= destination.name %></h2>
    <div class="row">
        
        
        <div style="width: 60%; margin: 10px auto;">
            <form action="/destinations/<%=destination._id%>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-success btn-block">Submit!</button>
                </div>
            </form>
            <a href="/destinations">Go Back</a>
        </div>
        
        
    </div>
    
</div>

<% include ../partials/footer %>