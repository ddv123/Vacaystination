<% include ../partials/header %>

<div class="container">
    <h2 style="text-align: center;">Edit <%=destination.name%></h2>
    <div class="row">
         
       
        <div style="width: 60%; margin: 10px auto;">
            
            <form action="/destinations/<%=destination._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="destination[name]" value="<%=destination.name%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="destination[map]" value="<%= destination.map %>" >
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="destination[image]" value="<%=destination.image%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="destination[description]" value="<%=destination.description%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-success btn-block">Submit!</button>
                </div>
            </form>
            <a href="/destinations">Go Back</a>
        </div>
        
        
    </div>
    
</div>

<% include ../partials/footer %>