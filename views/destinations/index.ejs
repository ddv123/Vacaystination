<% include ../partials/header %>

 <div class="container">
    
    <header class="jumbotron">
    <div class="container">
        
        <h1>Welcome To </h1>
        <img id="jumbo-logo" src="img/vacay-logo.png"></img>
        <p >Document your travels, Share your experiences, Learn about new and exciting places to visit!</p>
        <br>
        <p>
            <a class="btn btn-success btn-lrg " href="/destinations/new">Add New Destinations</a>
        </p>
    </div>
    </header>

    <div class="row">
        <div class="col-lg-12">
            <h3>Our Most Popular Destinations!</h3>
        </div>
    </div>    
    
    <!--<div class="destinations">-->
        <div class="grid">
            <% destinations.forEach(function(destination){%>
                <div class="grid-item">
                    <div class="card mb-2">
                      <img class="card-img-top" src="<%=destination.image%>" alt="Card image cap">
                      <div class="card-body" style="text-align: center;">
                        <h4><%=destination.name%></h4>
                        <p class="card-text">
                            <a class="btn btn-success" href="/destinations/<%= destination._id %>">More Info</a>    
                        </p>
                      </div>
                    </div>
                </div>
            <% }); %>
        </div>
    <!--</div>-->
 </div>
<% include ../partials/footer %>